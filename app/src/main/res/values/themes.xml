<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="textAppearanceTitleLarge">@style/TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TitleSmall</item>

        <item name="textAppearanceBodyMedium">@style/BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/BodySmall</item>

        <item name="materialButtonStyle">@style/WideButton</item>

        <item name="android:windowBackground">@color/black</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_6</item>
    </style>
</resources>